// Shadows

.box-shadow(@shadow)      {box-shadow: @shadow;}

.shadow-divider()         {.box-shadow(@shadow-divider)}
.shadow-divider-top()     {.box-shadow(@shadow-divider-top)}
.shadow-divider-outside() {.box-shadow(@shadow-divider-outside)}
.shadow-0()               {.box-shadow(@shadow-0)}
.shadow-1()               {.box-shadow(@shadow-1)}
.shadow-2()               {.box-shadow(@shadow-2)}
.shadow-3()               {.box-shadow(@shadow-3)}
.shadow-1-top()           {.box-shadow(@shadow-1-top)}
.shadow-2-top()           {.box-shadow(@shadow-2-top)}
.shadow-3-top()           {.box-shadow(@shadow-3-top)}
